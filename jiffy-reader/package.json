{
  "name": "jiffy-reader",
  "displayName": "Jiffy reader",
  "version": "0.0.1",
  "description": "jiffy reader",
  "packageManager": "yarn@1.22.18",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "dev:chrome": "cross-env VERSION=0.0.0.1 NAME=\"jiffy-reader-chrome-dev\" TARGET=chrome DEBUG=TRUE plasmo dev --target=chrome-mv3",
    "dev:firefox": "cross-env VERSION=0.0.0.1 NAME=\"jiffy-reader-firefox-dev\" TARGET=firefox DEBUG=TRUE plasmo dev --target=firefox-mv2",
    "build:chrome": "cross-env VERSION=0.0.0.1 NAME=\"jiffy-reader-chrome-dev\" TARGET=chrome DEBUG=TRUE plasmo dev --target=chrome-mv3",
    "build:firefox": "cross-env VERSION=0.0.0.1 NAME=\"jiffy-reader-firefox-dev\" TARGET=firefox DEBUG=TRUE plasmo dev --target=firefox-mv2",
    "gh:build:chrome": "plasmo dev --target=chrome-mv3",
    "gh:build:firefox": "plasmo dev --target=firefox-mv2",
    "gh:build:development": "plasmo dev --target=chrome-mv3"
  },
  "dependencies": {
    "@plasmohq/storage": "^0.8.1",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/node": "18.0.6",
    "cross-env": "^7.0.3",
    "plasmo": "0.48.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.6.2",
    "@types/chrome": "0.0.193",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "console-browserify": "^1.2.0",
    "prettier": "2.7.1",
    "process": "^0.11.10",
    "typescript": "4.7.4"
  },
  "manifest": {
    "name": "$NAME",
    "version_name": "$TARGET",
    "version": "$VERSION",
    "description": "An extension that allows for Bionic Reading on any webpage!",
    "permissions": [
      "activeTab"
    ],
    "commands": {
      "toggle-bionic": {
        "suggested_key": {
          "default": "Alt+B"
        },
        "description": "Toggle bionic reading mode"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ansh/jiffyreader.com"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ansh/jiffyreader.com/issues"
  },
  "homepage": "https://github.com/ansh/jiffyreader.com#readme",
  "engines": {
    "node": ">=16.13.2"
  }
}
